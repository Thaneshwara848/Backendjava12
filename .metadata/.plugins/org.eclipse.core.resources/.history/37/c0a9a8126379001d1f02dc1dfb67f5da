package com;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.Statement;

public class Demo2 {

	public static void main(String[] args) {
		//5s steps 
		// load the driver 
		// createt the connection 
		// statamment 
		// exteucte 
		// close 
		try {
			Class.forName("com.mysql.jdbc.Driver"); // JAR file 
			Connection con = DriverManager.getConnection("jdbc:mysql://localhost:3307/slbackend","root", "root");
			Statement stmt=con.createStatement();
			stmt.execute("insert into employee values(500,'Suresh',25,45000,'Clerk')");
			stmt.close();con.close();
			
		} catch (Exception e) {
			System.out.println(e);
		}
	}
}
